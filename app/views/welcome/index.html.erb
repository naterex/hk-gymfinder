<div class="col-sm-12 col-md-12 main">
  <h1 class="page-header">Find your perfect gym in Hong Kong</h1>
  <div class="row placeholders">
    <div class="col-xs-6 col-sm-3 placeholder">
      <%= image_tag("group-of-people-doing-aerobics.png", class: "img-responsive", alt: "group of people doing aerobics") %>
      <h4>Group Classes</h4>
    </div>
    <div class="col-xs-6 col-sm-3 placeholder">
      <%= image_tag("woman-with-her-personal-trainer.png", class: "img-responsive", alt: "woman with her personal trainer") %>
      <h4>Personal Training</h4>
    </div>
    <div class="col-xs-6 col-sm-3 placeholder">
      <%= image_tag("gym-people-in-a-yoga-class.png", class: "img-responsive", alt: "people in yoga class") %>
      <h4>Yoga</h4>
    </div>
    <div class="col-xs-6 col-sm-3 placeholder">
      <%= image_tag("man-lifting-weights.png", class: "img-responsive", alt: "man lifting weights") %>
      <h4>Weight Lifting</h4>
      <!-- <span class="text-muted">Something else</span> -->
    </div>
  </div>
</div>

<div class="table-responsive">
  <table id="index-data-table" class="table table-hover table-striped" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th></th>
        <th><span class="fa fa-star"></span> Brand</th>
        <th><span class="fa fa-th-list"></span> Branch</th>
        <th><span class="fa fa-map-marker"></span> District</th>
        <th><span class="fa fa-globe"></span> Territory</th>
        <th><span class="fa fa-home"></span> Address</th>
        <th><span class="fa fa-phone"></span> Phone</th>
        <th><span class="fa fa-check-circle"></span> Free Trial</th>
<!--         <th><span class="fa fa-thumbs-o-up"></span> Unique Feature</th> -->
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th></th>
        <th><span class="fa fa-star"></span> Brand</th>
        <th><span class="fa fa-th-list"></span> Branch</th>
        <th><span class="fa fa-map-marker"></span> District</th>
        <th><span class="fa fa-globe"></span> Territory</th>
        <th><span class="fa fa-home"></span> Address</th>
        <th><span class="fa fa-phone"></span> Phone</th>
        <th><span class="fa fa-check-circle"></span> Free Trial</th>
<!--         <th><span class="fa fa-thumbs-o-up"></span> Unique Feature</th> -->
      </tr>
    </tfoot>
    <tbody>
      <% @gyms.each do |gym| %>
        <tr class="table-row" data-gym-id="<%= gym.id %>">
          <td class="plus-icon"><span class="fa fa-plus"></span></td>
          <% if gym.brand == "Pure Fitness" %>
            <td class="success brand">
          <% elsif gym.brand == "Fitness First" %>
            <td class="danger brand">
          <% elsif gym.brand == "California Fitness" %>
            <td class="warning brand">
          <% elsif gym.brand == "Physical Fitness" %>
            <td class="info brand">
          <% end %>
            <%= gym.brand %>
          </td>
          <td><%= gym.branch %></td>
          <td><%= gym.district %></td>
          <td><%= gym.territory %></td>
          <td><%= gym.address %></td>
          <td><%= gym.telephone %></td>
          <td><%= gym.cardio %></td>
<!--           <td><%= gym.crossfit %></td> -->
        </tr>
  <!--  <tr class="detail-row">
          <td colspan="999">  TODO: don't hardcode the number of columns //
            details...
          </td>
        </tr> -->
      <% end %>
    </tbody>
  </table>
</div>