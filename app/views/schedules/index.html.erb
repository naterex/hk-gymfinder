<h1>Listing schedules</h1>

<table>
  <thead>
    <tr>
      <th>Gym</th>
      <th>Mon open</th>
      <th>Mon close</th>
      <th>Tues open</th>
      <th>Tues close</th>
      <th>Wed open</th>
      <th>Wed close</th>
      <th>Thu open</th>
      <th>Thu close</th>
      <th>Fri open</th>
      <th>Fri close</th>
      <th>Sat open</th>
      <th>Sat close</th>
      <th>Sun open</th>
      <th>Sun close</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.gym_id %></td>
        <td><%= schedule.mon_open %></td>
        <td><%= schedule.mon_close %></td>
        <td><%= schedule.tues_open %></td>
        <td><%= schedule.tues_close %></td>
        <td><%= schedule.wed_open %></td>
        <td><%= schedule.wed_close %></td>
        <td><%= schedule.thu_open %></td>
        <td><%= schedule.thu_close %></td>
        <td><%= schedule.fri_open %></td>
        <td><%= schedule.fri_close %></td>
        <td><%= schedule.sat_open %></td>
        <td><%= schedule.sat_close %></td>
        <td><%= schedule.sun_open %></td>
        <td><%= schedule.sun_close %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

